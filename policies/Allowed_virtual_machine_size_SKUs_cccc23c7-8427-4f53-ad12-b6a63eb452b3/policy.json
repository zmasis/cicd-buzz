{
 "properties": {
  "displayName": "Allowed virtual machine size SKUs",
  "policyType": "BuiltIn",
  "mode": "Indexed",
  "description": "This policy enables you to specify a set of virtual machine size SKUs that your organization can deploy.",
  "metadata": {
   "version": "1.0.1",
   "category": "Compute"
  },
  "policyRule": {
   "if": {
    "allOf": [
     {
      "field": "type",
      "equals": "Microsoft.Compute/virtualMachines"
     },
     {
      "not": {
       "field": "Microsoft.Compute/virtualMachines/sku.name",
       "in": [
     "standard_a1_v2",
     "standard_a2_v2",
     "standard_b2ms",
     "standard_b2s",
     "standard_b4ms",
     "standard_d2ads_v5",
     "standard_d2as_v4",
     "standard_d2as_v5",
     "standard_d2s_v3",
     "standard_d2s_v4",
     "standard_d2s_v5",
     "standard_d4ads_v5",
     "standard_e2ads_v5",
     "standard_e2as_v5",
     "standard_e2s_v5",
     "standard_e4ads_v5"
    ]
      }
     }
    ]
   },
   "then": {
    "effect": "Deny"
   }
  }
 },
 "id": "/providers/Microsoft.Authorization/policyDefinitions/cccc23c7-8427-4f53-ad12-b6a63eb452b3",
 "type": "Microsoft.Authorization/policyDefinitions",
 "name": "cccc23c7-8427-4f53-ad12-b6a63eb452b3"
}
